<view>
  <div class="main">
    <map id="map" longitude="{{ position.longitude }}" latitude="{{ position.latitude }}" scale="14"
    controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}"
    bindmarkertap="markertap"polyline="{{polyline}}" bindregionchange="regionchange"
    show-location style="width: 100%; height: 100%;"></map>
    <div class="user">
      <div class="user-img">
        <image src="{{ user.icon }}" style="width: 30px; height: 30px; background-color: #eeeeee;" alt="user"></image>
      </div>
    </div>
  </div>
</view>
